# ========================================
# CONFIGURATION DE L'ENVIRONNEMENT
# ========================================
# Copier ce fichier en .env et ajuster les valeurs

# Environnement (development, staging, production)
ENVIRONMENT=development

# Mode debug (True pour dev, False pour prod)
DEBUG=True

# ========================================
# BASE DE DONNÉES
# ========================================
# SQLite pour développement
DATABASE_URL=sqlite:///./tasks.db

# PostgreSQL pour production (exemple)
# DATABASE_URL=postgresql://user:password@localhost:5432/taskdb

# ========================================
# API CONFIGURATION
# ========================================
# Clé secrète pour la sécurité (CHANGER EN PRODUCTION !)
SECRET_KEY=your-super-secret-key-change-this-in-production-please

# Hôte de l'API
API_HOST=0.0.0.0

# Port de l'API
API_PORT=8000

# ========================================
# CORS (Cross-Origin Resource Sharing)
# ========================================
# Origines autorisées (séparées par des virgules)
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# ========================================
# STREAMLIT CLIENT
# ========================================
# URL de l'API pour le client Streamlit
API_BASE_URL=http://localhost:8000

# ========================================
# LOGGING
# ========================================
# Niveau de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ========================================
# PAGINATION
# ========================================
# Nombre maximum d'éléments par page
MAX_PAGE_SIZE=100

# Taille de page par défaut
DEFAULT_PAGE_SIZE=20
